<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reylo.rego.Basics.UserBirthday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userBirthdayHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/user_birthday_header_text_view"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/userBirthdayDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="mm/dd/yyyy"
                android:inputType="date"
                android:singleLine="true"
                android:textSize="18sp"
                android:digits="1234567890/"/>

            <TextView
                android:id="@+id/userBirthdayActivityHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="@string/user_birthday_hint_text"
                />

            <ImageView
                android:id="@+id/userBirthdayActivityNextArrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_margin="15dp"
                android:layout_gravity="right"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
