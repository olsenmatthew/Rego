<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#f1f1f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:text="Show Me"
            android:textStyle="bold" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:background="@drawable/box_rounder"
            >

            <co.ceryle.radiorealbutton.RadioRealButtonGroup
                android:id="@+id/radioRealButtonGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/box_rounder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rrbg_animateDrawables_enter="overshoot"
                app:rrbg_animateDrawables_enterDuration="500"
                app:rrbg_animateDrawables_exit="overshoot"
                app:rrbg_animateDrawables_exitDuration="500"
                app:rrbg_animateDrawables_scale="1.2"
                app:rrbg_animateTexts_enter="overshoot"
                app:rrbg_animateTexts_enterDuration="500"
                app:rrbg_bottomLineColor="@color/colorPrimary"
                app:rrbg_buttonsPaddingBottom="20sp"
                app:rrbg_buttonsPaddingTop="14dp"
                app:rrbg_dividerColor="@color/colorPrimary"
                app:rrbg_dividerSize="1px"
                app:rrbg_selectorAboveOfBottomLine="false"
                app:rrbg_selectorColor="@color/colorPrimary"
                app:rrbg_selectorDividerPadding="20sp"
                app:rrbg_selectorSize="6dp"
                app:rrbg_selectorTop="false">

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/edit_settings_radio_button_show_males"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawable="@drawable/ic_male"
                    app:rrb_drawableGravity="top"
                    app:rrb_drawableHeight="40dp"
                    app:rrb_drawableTint="@color/colorPrimary"
                    app:rrb_drawableWidth="40dp"
                    app:rrb_text="Male"
                    app:rrb_textColor="@color/colorPrimary"
                    app:rrb_textSize="12sp" />

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/edit_settings_radio_button_show_females"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawable="@drawable/ic_female"
                    app:rrb_drawableGravity="top"
                    app:rrb_drawableHeight="40dp"
                    app:rrb_drawableTint="@color/colorPrimary"
                    app:rrb_drawableWidth="40dp"
                    app:rrb_rippleColor="@color/colorPrimary"
                    app:rrb_text="Female"
                    app:rrb_textColor="@color/colorPrimary"
                    app:rrb_textSize="12sp" />

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:id="@+id/edit_settings_radio_button_show_both"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_drawable="@drawable/ic_male_female"
                    app:rrb_drawableGravity="top"
                    app:rrb_drawableHeight="40dp"
                    app:rrb_drawableTint="@color/colorPrimary"
                    app:rrb_drawableWidth="40dp"
                    app:rrb_rippleColor="@color/colorPrimary"
                    app:rrb_text="Both"
                    app:rrb_textColor="@color/colorPrimary"
                    app:rrb_textSize="12sp" />

            </co.ceryle.radiorealbutton.RadioRealButtonGroup>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:text="Invisibility Mode"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:background="@drawable/box_rounder"
            >

            <TextView
                android:id="@+id/edit_settings_invisible_mode_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Stay invisible from people"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/edit_settings_invisibility_people_switch"
                app:layout_constraintEnd_toStartOf="@+id/edit_settings_invisibility_people_switch"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_settings_invisibility_people_switch" />

            <Switch
                android:id="@+id/edit_settings_invisibility_people_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:text="Personal Information"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:background="@drawable/box_rounder"
            >

            <TextView
                android:id="@+id/edit_settings_hide_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="Hide my age"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_settings_hide_age_switch"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/edit_settings_hide_age_switch" />

            <Switch
                android:id="@+id/edit_settings_hide_age_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/edit_settings_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:text="Contact Us"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:background="@drawable/box_rounder"
            >

            <TextView
                android:id="@+id/edit_settings_help_and_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Help and Support"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/box_rounder"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/edit_settings_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Legal"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edit_settings_terms_and_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Terms and conditions of use"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/edit_settings_legal"
                app:layout_constraintStart_toStartOf="@+id/edit_settings_legal"
                app:layout_constraintTop_toBottomOf="@+id/edit_settings_legal" />

            <TextView
                android:id="@+id/edit_settings_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Privacy Policy"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@+id/edit_settings_terms_and_conditions"
                app:layout_constraintStart_toStartOf="@+id/edit_settings_terms_and_conditions"
                app:layout_constraintTop_toBottomOf="@+id/edit_settings_terms_and_conditions" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Cookie Policy"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_settings_privacy_policy" />

        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/edit_settings_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorAccent"
            android:text="Log Out"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/edit_settings_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#ff0000"
            android:text="Delete Account"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>

